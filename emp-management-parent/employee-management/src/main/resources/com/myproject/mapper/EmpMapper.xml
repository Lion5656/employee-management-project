<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--放置對應EmpMapper限定類別名-->
<mapper namespace="com.myproject.mapper.EmpMapper">
<!--    使用方法 id=list，回傳型態為單個封裝物件 = Emp的限定類別名 -->
    <select id="list" resultType="com.myproject.pojo.Emp">
        select e.*, d.name deptName
        from emp e left join dept d on e.dept_id = d.id
<!--        判斷where內的if條件有沒有成立，有的話才會拼接where，還可自動去除多餘 and/or-->
        <where>
<!--        if 判斷name參數是否有值再拼接sql，其他同樣-->
            <if test="name != null and name != ''">
                e.name like concat('%', #{name}, '%')
            </if>
            <if test="gender != null">
                and gender = #{gender}
            </if>
            <if test="begin != null and end != null">
                and entry_date between #{begin} and #{end}
            </if>
        </where>
        order by e.update_time desc
    </select>
<!--    批量刪除員工-->
    <delete id="deleteByIds" parameterType="List">
        delete from emp where id in
        <foreach collection="empIdList" item="empId" open="(" close=")" separator=",">
            #{empId}
        </foreach>
    </delete>
<!--    回傳手動封裝的resultMap-->
    <resultMap id="empResultMap" type="com.myproject.pojo.Emp">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="gender" property="gender"/>
        <result column="phone" property="phone"/>
        <result column="job" property="job"/>
        <result column="salary" property="salary"/>
        <result column="entry_date" property="entryDate"/>
        <result column="dept_id" property="deptId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <collection property="exprList" ofType="com.myproject.pojo.EmpExpr">
            <id column="ee_id" property="id"/>
            <result column="ee_company" property="company"/>
            <result column="ee_job" property="company"/>
            <result column="ee_begin" property="begin"/>
            <result column="ee_end" property="end"/>
            <result column="ee_emp_id" property="empId"/>
        </collection>
    </resultMap>
<!--    根據id查詢員工資料-->
    <select id="getById" resultMap="empResultMap">
        select
            e.*,
            ee.id ee_id,
            ee.company ee_company,
            ee.job ee_job,
            ee.begin ee_begin,
            ee.end ee_end,
            ee.emp_id ee_emp_id
        from emp e left join emp_expr ee on e.id = ee.emp_id
        where e.id = #{id}
    </select>
<!--    根據id更新員工資料-->
    <update id="updateById">
        update emp
<!--        set判斷if有沒有成立，自動去除 ',' -->
        <set>
            <if test="name != null and name !=''">name = #{name},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="phone != null and phone != ''">phone = #{phone},</if>
            <if test="job != null">job = #{job},</if>
            <if test="salary != null">salary = #{salary},</if>
            <if test="entryDate != null">entry_date = #{entryDate},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        where id = #{id}
    </update>

<!--  職位統計-->
    <select id="countByJob" resultType="java.util.Map">
        select
        case when job = 1 then '主任'
            when job = 2 then '組長'
            when job = 3 then '專員'
            when job = 4 then '員工'
            when job = 5 then '實習生'
        else '其他'
        end as pos,
        count(*) as total
        from emp group by job order by job;
    </select>

<!--    性別統計-->
    <select id="countByGender" resultType="java.util.Map">
        select
            if(gender = 1, '男性員工', '女性員工') as name,
            count(*) as value
        from emp group by gender order by gender;
    </select>
</mapper>